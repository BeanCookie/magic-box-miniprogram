<!-- index.wxml -->
<view>
  <t-pull-down-refresh id="pull-down-refresh" normal-bar-height="{{200}}" max-bar-height="{{272}}" refreshTimeout="{{500}}" background="#f5f5f5" use-loading-slot loading-size="60rpx" loading-texts="{{['下拉刷新', '松手刷新', '正在刷新', '刷新完成', '']}}" bindrefresh="onPullDownRefresh">
    <t-loading slot="loading" type="circular-ext" color="#306AFF" background-color="#f5f5f5" size="60rpx" paused />
    <view wx:for="{{articles}}" wx:for-index="id" wx:for-item="article">
      <t-cell hover="{{true}}" title="{{article.title}}" align="top" description="{{article.brief_content}}" t-class-image="title-image-large" jump-type="{{redirect-to}}" image="{{article.cover_image}}" data-article="{{article}}" bind:click="onClick"></t-cell>
    </view>
  </t-pull-down-refresh>
</view>
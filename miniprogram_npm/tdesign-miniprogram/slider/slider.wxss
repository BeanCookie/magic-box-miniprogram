.t-slider__container {
  font-size: 14px;
}
.t-slider__container.bottom {
  padding-bottom: 40rpx;
}
.t-slider__container .t-slider-value,
.t-slider__container .t-slider-range-extrem,
.t-slider__container .t-slider-dot-value {
  color: rgba(0, 0, 0, 0.4);
}
.t-slider__container.disabled .t-slider-value,
.t-slider__container.disabled .t-slider-range-extrem,
.t-slider__container.disabled .t-slider-dot-value,
.t-slider__container.disabled .scale-desc {
  color: rgba(0, 0, 0, 0.26);
}
.t-slider__container .t-slider-value__active {
  text-align: center;
}
.t-slider__wrapper {
  display: flex;
  align-items: center;
  height: 96rpx;
}
.t-slider__wrapper .t-slider__main {
  position: relative;
  margin: 0 32rpx;
  flex: 10;
  padding: 16rpx 0;
  background-clip: content-box;
  height: 4rpx;
  border-radius: 2rpx;
  display: inline-block;
}
.t-slider__wrapper .t-slider__main .t-slider-line {
  position: absolute;
  top: 8px;
  height: 4rpx;
  border-radius: 2rpx;
}
.t-slider__wrapper .t-slider__main .t-slider-dot {
  border-radius: 50%;
  border: 2rpx solid #dcdcdc;
  position: absolute;
  background-color: #fff;
  width: 16px;
  height: 16px;
  top: -16rpx;
  z-index: 2;
}
.t-slider__wrapper .t-slider-value {
  display: inline-block;
}
.t-slider__wrapper .t-slider-value__min {
  margin-left: 16px;
}
.t-slider__wrapper .t-slider-value__max {
  margin-right: 16px;
}
.t-slider__wrapper .t-slider-value__right {
  flex-basis: 80rpx;
}
.t-slider__wrapper .t-slider-active {
  width: 100%;
}
.t-slider-range-container {
  display: flex;
  padding: 22.4px 0 0 0;
}
.t-slider-range-container .t-slider-range-extrem {
  display: inline-block;
}
.t-slider-range-container .t-slider-range-min {
  margin-left: 32rpx;
  text-align: left;
}
.t-slider-range-container .t-slider-range-max {
  margin-right: 32rpx;
  text-align: right;
}
.t-slider-range-container .t-slider-bar {
  margin: 0 32rpx;
  flex: 10;
  padding: 16rpx 0;
  background-clip: content-box;
  height: 4rpx;
  border-radius: 2rpx;
  position: relative;
  display: inline-block;
}
.t-slider-range-container .t-slider-bar .t-slider-dot {
  border-radius: 50%;
  border: 2rpx solid #dcdcdc;
  position: absolute;
  z-index: 2;
  background-color: #fff;
  width: 16px;
  height: 16px;
  top: 2rpx;
}
.t-slider-range-container .t-slider-bar .t-slider-dot__left {
  left: 0;
}
.t-slider-range-container .t-slider-bar .t-slider-dot__right {
  right: 0;
}
.t-slider-range-container .t-slider-bar .t-slider-dot-value {
  position: relative;
  top: -26px;
  text-align: center;
}
.t-slider-range-container .t-slider-bar .t-slider-line {
  position: absolute;
  top: 8px;
  height: 5rpx;
}
.t-slider-scale-item {
  background-color: #0052d9;
  width: 4rpx;
  height: 14rpx;
  position: absolute;
  bottom: 6rpx;
  z-index: 1;
}
.t-slider-scale-item .scale-desc {
  position: absolute;
  color: rgba(0, 0, 0, 0.4);
  transform: translateX(-50%);
  top: 20rpx;
}

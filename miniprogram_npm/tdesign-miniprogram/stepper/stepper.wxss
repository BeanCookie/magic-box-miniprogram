.t-stepper-normal {
  display: flex;
  align-items: center;
}
.t-stepper-normal .t-stepper__input {
  display: block;
  font-size: 16px;
  color: #000;
  text-align: center;
  border: 0;
  vertical-align: top;
  background: 0;
  height: 48rpx;
}
.t-stepper-normal .t-stepper__minus,
.t-stepper-normal .t-stepper__plus {
  display: block;
  box-sizing: border-box;
  height: 48rpx;
  padding-top: 5rpx;
}
.t-stepper-normal.t-is-disabled .t-stepper__input {
  color: rgba(0, 0, 0, 0.26);
}
.t-stepper-pure {
  display: flex;
  align-items: center;
}
.t-stepper-pure .t-stepper__input {
  border-radius: 2px;
  height: 48rpx;
  margin: 0 5px;
  background-color: #f1f2f5;
  text-align: center;
  font-size: 24rpx;
}
.t-stepper-pure .t-stepper__minus,
.t-stepper-pure .t-stepper__plus {
  box-sizing: border-box;
  border-radius: 2px;
  background-color: #f1f2f5;
  padding: 5rpx 10rpx;
  height: 48rpx;
}
.t-stepper-pure.t-is-disabled .t-stepper__input {
  color: rgba(0, 0, 0, 0.26);
}

.upload .upload-grid__content {
  background: #f3f3f3;
  padding: 0;
}
.upload .upload-grid--file {
  position: relative;
}
.upload .upload-grid--file__thumbnail {
  width: 100%;
  height: 100%;
  max-height: 100%;
  overflow: hidden;
}
.upload .upload-grid--file__close-btn {
  position: absolute;
  z-index: 2;
  top: 0;
  right: 0;
  font-size: 21rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  background-color: rgba(0, 0, 0, 0.6);
}
.upload .upload-grid--add-btn__icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f3f3f3;
  color: #a6a6a6;
}
.upload .upload-grid-item-wrapper {
  position: relative;
}
.upload .progress-mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}
.upload .progress-mask .progress-failed {
  color: #ff4646;
  font-size: 24rpx;
}
.upload .progress-mask .progress-value {
  color: #fff;
  font-size: 24rpx;
}
.dialog--media-type {
  background-color: #f3f4f5;
  overflow: hidden;
}
.dialog--media-type .options .option {
  color: #333;
  font-size: 30rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
}
.dialog--media-type .options .option:not(:last-child) {
  border-bottom: 1px solid #e5e5e5;
}
.dialog--media-type .options .option:active {
  opacity: 0.5;
}
.dialog--media-type .options .option.main {
  color: #fa550f;
}
.dialog--media-type .cancel {
  color: #333;
  font-size: 30rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.dialog--media-type .cancel:active {
  opacity: 0.5;
}
